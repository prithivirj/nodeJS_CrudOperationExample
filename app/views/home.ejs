<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>

<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/home">My Node App</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <h2>Employee list</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Mobile No.</th>
                    <th>E-mail</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < data.length; i++) { %>
                <tr>
                    <td>
                        <%= data[i].username %>
                    </td>
                    <td>
                        <%= data[i].firstName %>
                    </td>
                    <td>
                        <%= data[i].lastName %>
                    </td>
                    <td>
                        <%= data[i].mobileNo %>
                    </td>
                    <td>
                        <%= data[i].email %>
                    </td>

                    <td>
                        <a class="btn btn-link edit" data-id="<%= data[i]._id %>" >Edit</a>|
                        <a class="btn btn-link delete" data-id="<%= data[i]._id %>" >Delete</a>
                    </td>
                </tr>
                <% } %>

            </tbody>
        </table>
    </div>

    <script
    src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
    crossorigin="anonymous"></script>

<script>


    $(".edit").click(function () {
        var id = $(this).attr('data-id');
        window.location.href = '/employee-update/' + id;
    });

    $(".delete").click(function () {
        var id = $(this).attr('data-id');
        window.location.href = '/employee-delete/' + id;
    });

</script>

</body>
